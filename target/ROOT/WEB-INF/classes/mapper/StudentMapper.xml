<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="exam.dao.StudentDao" >
    <sql id="BASE_TABLE">
        student
    </sql>

    <sql id="BASE_COLUMN">
        id,`name`,age
    </sql>

    <insert id="insertStu" parameterType="exam.bean.Student">
        INSERT INTO
        <include refid="BASE_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            `name`,age

        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            #{name, jdbcType=VARCHAR},#{age, jdbcType=INTEGER}

        </trim>
    </insert>

    <select id="selectStudent" resultType="exam.bean.Student" parameterType="java.util.Map">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
        <where>
            <if test="id != null">
                id=#{id,jdbcType=INTEGER}

            </if>

            <if test="name != null">
                and `name`=#{name,jdbcType=VARCHAR}

            </if>
        </where>
    </select>


    <update id="updateStudent" parameterType="exam.bean.Student" >
        update
        <include refid="BASE_TABLE"/>
        <set >
            <if test="name != null" >
                `name` = #{name,jdbcType=VARCHAR},
            </if>
            <if test="age != null" >
                age = #{age,jdbcType=INTEGER},
            </if>

        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <delete id="deleteStudent" parameterType="java.lang.Integer" >
    delete from
        <include refid="BASE_TABLE"/>
    where id = #{id,jdbcType=INTEGER}
  </delete>

</mapper>